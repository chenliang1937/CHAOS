<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12">

        <ImageView
            android:id="@+id/navitem2_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_bus_purple"/>

        <TextView
            android:id="@+id/navitem2_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/navitem2_icon"
            android:layout_toLeftOf="@+id/navitem2_arrow"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color"
            android:text="58路>405路"/>

        <TextView
            android:id="@+id/navitem2_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/navitem2_icon"
            android:layout_toLeftOf="@+id/navitem2_arrow"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/navitem2_text1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/half_black"
            android:text="1小时14分钟|18公里|步行950米"/>

        <ImageView
            android:id="@+id/navitem2_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>