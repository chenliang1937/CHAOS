<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.andexert.library.RippleView
        android:id="@+id/recoitem_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        ripple:rv_type="rectangle"
        ripple:rv_color="@color/ripple_color"
        ripple:rv_rippleDuration="200">

        <ImageView
            android:id="@+id/recoitem_iv"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_68"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_boy"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/recoitem_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/recoitem_iv"
            android:text="take me to you day by day"
            android:layout_centerVertical="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.1"
            android:layout_below="@+id/recoitem_iv"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/colorAccent"/>

    </com.andexert.library.RippleView>

</RelativeLayout>