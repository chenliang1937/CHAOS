<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.meiya.chaos.widget.PinchImageView
        android:id="@+id/pdi_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:id="@+id/pdi_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentTop="true"
        android:background="@color/half_black"
        android:visibility="visible">

        <ImageView
            android:id="@+id/pdi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@drawable/jc_back"/>

        <TextView
            android:id="@+id/pdi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pdi_back"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/sp_16"
            android:text="谁在意，我的心里有多苦"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pdi_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_black"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="visible">

        <TextView
            android:id="@+id/pdi_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/sp_16"
            android:text="1/6"/>

        <TextView
            android:id="@+id/pdi_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pdi_count"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/sp_16"
            android:text="谁在意，我的明天去何处，这条路，究竟多少崎岖多少坎坷途，我和你，早已没有回头路" />

    </RelativeLayout>

</RelativeLayout>